        <item name="colorDrawerHeader">@color/drawer_header</item>

        <item name="readTopic">@color/read_topic</item>
        <item name="hiddenSpoilerColor">@color/white</item>
        <item name="revealedSpoilerColor">@color/black</item>

        <item name="themedPollTopicIcon">@drawable/ic_poll_white_18dp</item>
        <item name="themedLockedTopicIcon">@drawable/ic_lock_white_18dp</item>
        <item name="themedArchivedTopicIcon">@drawable/ic_save_white_18dp</item>
        <item name="themedPinnedTopicIcon">@drawable/ic_whatshot_white_18dp</item>

        <item name="windowActionModeOverlay">true</item>
