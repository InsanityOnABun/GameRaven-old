<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modaccGlobalWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/modaccTopWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/modaccDefaultAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="Default Account" />

        <CheckBox
            android:id="@+id/modaccUseGfaqsSig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="Use GFAQs Sig" />
    </LinearLayout>

    <EditText
        android:id="@+id/modaccSigContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLength="160" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/modaccSigCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <Button
        android:id="@+id/modaccDeleteAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Account" />

</LinearLayout>