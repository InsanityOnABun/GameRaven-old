            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_orange_dark_accent" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tpPurpleDark"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/theme_background_dark" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/theme_purple_dark" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/theme_purple_dark_secondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_purple_dark_accent" />

        </FrameLayout>


    </LinearLayout>
</RelativeLayout>