            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/theme_purple_light_secondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_purple_light_accent" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tpDarkWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tpSelected"
        android:layout_toRightOf="@id/tpVertSpacer"
