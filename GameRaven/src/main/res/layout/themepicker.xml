<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="12dp">

    <TextView
        android:id="@+id/tpSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:text="blah"
        android:textColor="@color/black" />
    
    <Space
        android:id="@+id/tpVertSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/tpLightWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tpSelected"
        android:layout_toLeftOf="@id/tpVertSpacer"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/tpBlueLight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/theme_background_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/theme_blue_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/theme_blue_light_secondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_blue_light_accent" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tpRedLight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/theme_background_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/theme_red_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/theme_red_light_secondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_red_light_accent" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tpGreenLight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/theme_background_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/theme_green_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/theme_green_light_secondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_green_light_accent" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tpOrangeLight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/theme_background_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/theme_orange_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/theme_orange_light_secondary" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/theme_orange_light_accent" />

        </FrameLayout>

        <FrameLayout
