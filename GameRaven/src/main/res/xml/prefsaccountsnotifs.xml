<?xml version="1.0" encoding="utf-8"?><PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">    <PreferenceCategory        android:key="accountsCategory"        android:orderingFromXml="true"        android:persistent="false"        android:title="Accounts">        <Preference            android:key="manageAccounts"            android:persistent="false"            android:summary="Add new accounts and modify existing ones."            android:title="Manage Accounts" />        <Preference            android:key="customSig"            android:persistent="false"            android:summary="Custom signature that applies to accounts that do not have their own set."            android:title="Custom Global Signature..." />        <ListPreference            android:entries="@array/timezones"            android:entryValues="@array/timezones"            android:key="timezone"            android:persistent="true"            android:summary="Match this time zone to the one you use on GameFAQs."            android:title="Time Zone" />    </PreferenceCategory>    <PreferenceCategory        android:key="notifsCategory"        android:orderingFromXml="true"        android:title="Notification Settings\n(Default Account Only)">        <SwitchPreference            android:defaultValue="false"            android:disableDependentsState="false"            android:key="notifsEnable"            android:persistent="true"            android:summary="Enable or disable notifications entirely."            android:title="Notifications" />        <SwitchPreference            android:defaultValue="false"            android:dependency="notifsEnable"            android:key="notifsAMPEnable"            android:persistent="true"            android:summary="Notify of new AMP posts."            android:title="AMP List" />        <SwitchPreference            android:defaultValue="false"            android:dependency="notifsEnable"            android:key="notifsTTEnable"            android:persistent="true"            android:summary="Notify of new posts in tracked topics."            android:title="Tracked Topics" />        <SwitchPreference            android:defaultValue="false"            android:dependency="notifsEnable"            android:key="notifsPMEnable"            android:persistent="true"            android:summary="Notify of new private messages."            android:title="PMs" />        <ListPreference            android:defaultValue="60"            android:dependency="notifsEnable"            android:entries="@array/notifsFrequencyNames"            android:entryValues="@array/notifsFrequencyMinutes"            android:key="notifsFrequency"            android:persistent="true"            android:summary="Default is every hour. High frequency checking can affect battery life."            android:title="Notification Frequency" />    </PreferenceCategory></PreferenceScreen>